{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "singularName": "blog",
    "pluralName": "blogs",
    "displayName": "Blog",
    "description": "Blog posts for the website"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "maxLength": 300,
      "description": "A brief summary of the blog post"
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "author": {
      "type": "string",
      "required": true
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "mappedBy": "blogs"
    },
    "publishDate": {
      "type": "datetime",
      "required": true,
      "default": "2024-02-07T00:00:00.000Z"
    },
    "metaTitle": {
      "type": "string",
      "maxLength": 60,
      "description": "SEO title (max 60 characters)"
    },
    "metaDescription": {
      "type": "text",
      "maxLength": 160,
      "description": "SEO description (max 160 characters)"
    },
    "tags": {
      "type": "text",
      "description": "Comma-separated list of tags"
    },
    "readTime": {
      "type": "integer",
      "min": 1,
      "description": "Estimated reading time in minutes"
    },
    "isHighlighted": {
      "type": "boolean",
      "default": false,
      "description": "Feature this post in highlights section"
    },
    "Blog_Images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "Blog_Image2": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "Blog_Image3": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "TypeOfBlog": {
      "type": "string"
    }
  }
}
